<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="300dp"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        android:layout_gravity="start"></FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <com.ren.xunxunvoice.activity.view.SwitchItemView
                android:id="@+id/main_voice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:padding="7dp"
                app:item_icon="@drawable/tab_voice"
                app:item_icon_padding_text="3dp"
                app:item_test_color="@color/colorPrimary"
                app:item_test_size="15sp"
                app:item_text="语音" />

            <com.ren.xunxunvoice.activity.view.SwitchItemView
                android:id="@+id/main_voice2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:padding="7dp"
                app:item_icon="@drawable/tab_voice"
                app:item_icon_padding_text="3dp"
                app:item_test_color="@color/colorPrimary"
                app:item_test_size="15sp"
                app:item_text="语音2" />

            <com.ren.xunxunvoice.activity.view.SwitchItemView
                android:id="@+id/main_voice3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:padding="7dp"
                app:item_icon="@drawable/tab_voice"
                app:item_icon_padding_text="3dp"
                app:item_test_color="@color/colorPrimary"
                app:item_test_size="15sp"
                app:item_text="语音3" />

            <com.ren.xunxunvoice.activity.view.SwitchItemView
                android:id="@+id/main_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:padding="7dp"
                app:item_icon="@drawable/tab_me"
                app:item_icon_padding_text="3dp"
                app:item_test_color="@color/colorPrimary"
                app:item_test_size="15sp"
                app:item_text="我" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>